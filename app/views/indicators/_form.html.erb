<%= form_for(@indicator) do |f| %>
  <% if @indicator.errors.any? %>
    <%= render partial: "partials/errors", locals: {object: @indicator} %>
  <% end %>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :competency_id %><br>
    <%= f.collection_select :competency_id, @active_competencies,
      :id, :name, { prompt: "Choose a competency..." } %>
  </div>
  <div>
    <%= f.label :level_id %><br>
    <%= f.collection_select :level_id, @active_levels,
      :id, :name, { prompt: "Choose a level..." } %>
  </div>
  <div>
    <%= f.check_box :active %>
    <%= f.label :active, id:"active" %><br>
  </div>
  <br>
  <div>
    <%= button_to "Submit", class: "btn waves-effect waves-light", name: "competency_id", value: @competency_id do %>
      Submit <i class="material-icons right">send</i>
    <% end %>
  </div>

<% end %>
