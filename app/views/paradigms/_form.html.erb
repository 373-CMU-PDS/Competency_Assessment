<%= form_for(@paradigm) do |f| %>
  <% if @paradigm.errors.any? %>
    <%= render partial: "partials/errors", locals: {object: @paradigm} %>
  <% end %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :ranking %><br>
    <%= f.number_field :ranking %>
  </div>
  <div>
    <%= f.check_box :active %>
    <%= f.label :active, id:"active" %><br>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
