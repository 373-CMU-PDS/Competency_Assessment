<div class="col s12 m6">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <span class="card-title"><%= @paradigm.name %></span>
      <div class="divider"></div>
      <p><strong>Description: </strong><%= @paradigm.description %></p>
      <br>
      <p><strong>Ranking: </strong><%= @paradigm.ranking %></p>
      <br>
      <p>This paradigm is <%= @paradigm.active ? "active" : "inactive" %></p>
    </div>
    <div class="card-action">
      <%= link_to "Edit", edit_paradigm_path(@paradigm), class: "waves-effect waves-light btn" %>
      <%= link_to "Delete", paradigm_path(@paradigm),
          method: 'delete',
          data: {confirm: "Are you sure you want to permanently delete #{@paradigm.name}?"},
          class: "waves-effect waves-light btn red" %>
    </div>
  </div>
</div>
