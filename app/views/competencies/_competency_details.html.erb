<div class="center-text">
<h1>Manage <%= @competency.name %> Competency</h1>
</div>
  <div class="row center-text">
  <p class="flow-text"> <%= @competency.description %></p>
  <h6 class="flow-text"><%= @competency.active ? "This competency is active" : "This competency is inactive" %></h6>
</div>
<div class="divider"></div>
<div class="section">
  <div class="row">
    <div class="col s12 m6 center-text">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Resources</span>
        </div>
        <div class="card-action">
          <%= link_to "Manage Resources", resources_path %>
        </div>
      </div>
    </div>

    <div class="col s12 m6 center-text">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Questions</span>
        </div>
        <div class="card-action">
          <%= link_to "Manage Questions", questions_path %>
        </div>
      </div>
    </div>

    <div class="col s12 m6 center-text offset-s3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Indicators</span>
        </div>
        <div class="card-action">
          <%= link_to "Manage Indicators", indicators_path %>
        </div>
      </div>
    </div>
  </div>
</div>
